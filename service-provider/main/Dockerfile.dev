ARG RUBY_VERSION=3.2.9
FROM ruby:$RUBY_VERSION-slim

# Install dependencies + ca-certificates
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    libpq-dev \
    libvips \
    libyaml-dev \
    pkg-config \
    curl \
    ca-certificates && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set working directory
WORKDIR /app

# Copy mkcert root CA certificate
COPY ssl/rootCA.pem /usr/local/share/ca-certificates/mkcert-root.crt

# Update CA certificates
RUN update-ca-certificates

# Set development environment
ENV RAILS_ENV=development \
    BUNDLE_PATH=/usr/local/bundle

# Copy Gemfile and Gemfile.lock
COPY service-provider/main/Gemfile service-provider/main/Gemfile.lock ./

# Install gems
RUN bundle install

# Copy application code
COPY service-provider/main/ .

# Expose port 3001
EXPOSE 3001

# Start Rails server
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0", "-p", "3001"]